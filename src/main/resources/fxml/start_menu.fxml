<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.poianitibaldizhou.sagrada.graphics.controller.StartMenuController">
   <children>
      <Button fx:id="multiPlayerButton" mnemonicParsing="false" onMouseEntered="#onMouseEnter" onMouseExited="#onMouseExit"
              onAction="#startMultiPlayerGame" text="Multi Player" />
      <Button fx:id="singlePlayerButton" mnemonicParsing="false" onMouseEntered="#onMouseEnter" onMouseExited="#onMouseExit"
              onAction="#startSinglePlayerGame" text="Single Player" />
      <Button fx:id="changeConnectionButton" mnemonicParsing="false" onMouseEntered="#onMouseEnter" onMouseExited="#onMouseExit"
              onAction="#changeConnectionMode" text="Change Connection" />
      <Button fx:id="quitButton" mnemonicParsing="false" onMouseEntered="#onMouseEnter" onMouseExited="#onMouseExit"
              onAction="#quitGame" text="Quit" />
   </children>
</VBox>
